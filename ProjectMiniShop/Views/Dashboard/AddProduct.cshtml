@model ProjectMiniShop.ViewModel.ProductViewModel   
@{
    Layout = "_Dashboard";
}
<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Adding Product</span>
    </div>

    <div>
        <form  class="row" method="post" asp-action="AddProduct" >
            <div class="mb-3">
                <label asp-for="Product.Name" class="form-label">Product Name</label>
                <input type="text"
                       asp-for="Product.Name"
                       class="form-control"
                       placeholder="" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Product.Description" class="form-label">Product Description</label>
                <textarea type="text"
                          asp-for="Product.Description"
                          class="form-control"
                          placeholder=""></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Product.Quantity" class="form-label">Product Quantity</label>
                <input type="number"
                       asp-for="Product.Quantity"
                       id=""
                       class="form-control"
                       placeholder=""></input>
                <span asp-validation-for="Product.Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Product.Price" class="form-label">Product Price</label>
                <input type="number"
                       asp-for="Product.Price"
                       id=""
                       class="form-control"
                       placeholder=""></input>
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Product.EnableSize" type="checkbox" />
                    <label class="form-check-label" asp-for="Product.EnableSize"> Enable Product Size </label>
                </div>
            </div>

            <div class="mb-3 col-lg-6">
                <label asp-for="Product.CompanyId" class="form-label">company</label>
                <select class="form-select "
                        asp-for="Product.CompanyId" asp-items="@Model.companies">
                    
                </select>
                <span asp-validation-for="Product.CompanyId" class="text-danger"></span>
            </div>

            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-primary">Submit</button>

            </div>
        </form>

    </div>
</div>