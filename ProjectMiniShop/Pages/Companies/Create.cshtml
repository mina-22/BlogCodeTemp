@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model ProjectMiniShop.Pages.Companies.CreateModel
@{
    Layout = "_Dashboard";
}
<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Adding Company</span>
    </div>

    <div>
        <form class="row" method="post">
            <div class="mb-3">
                <label asp-for="company.Name" class="form-label">Product Name</label>
                <input type="text"
                       asp-for="company.Name"
                       class="form-control"
                       placeholder="" />
                <span asp-validation-for="company.Name" class="text-danger"></span>
            </div>

            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-primary">Submit</button>

            </div>
        </form>

    </div>
</div>
